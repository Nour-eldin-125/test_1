<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/map.png"
        android:layout_width="wrap_content"
        android:layout_height="375dp"
        android:background="@drawable/map"/>
    <ImageView
        android:id="@+id/green"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:src="@drawable/topcorner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/white"
        />

    <ImageView
        android:id="@+id/white"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map.png"/>

    <ImageView
        android:id="@+id/useric"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/white"/>
    <TextView
        android:id="@+id/userinf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mohmed Ahmed"
        android:textSize="20dp"
        android:textColor="#31a750"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="@id/white"
        app:layout_constraintStart_toEndOf="@id/useric"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/userrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(4.8)"
        android:textSize="20dp"
        android:textColor="#31a750"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="@id/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nearest driver found is 1 min away"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="@id/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="7dp"
        android:textSize="17sp"
        />


    <TextView
        android:id="@+id/usinf2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/shield"
        android:drawablePadding="5sp"
        android:text="Ride complete 250 +"
        android:textColor="#A3A2A2"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/userinf"
        app:layout_constraintStart_toEndOf="@id/useric"
        />
    <TextView
        android:id="@+id/userate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:textColor="#A3A2A2"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/userinf"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        />
    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Ride ?"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/bt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/carinf"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#d3f8e3"
        app:layout_constraintTop_toBottomOf="@id/useric"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        />
    <TextView
        android:id="@+id/txt.car1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 Person"
        android:drawableStart="@drawable/seat"
        android:drawablePadding="5sp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toTopOf="@id/carinf"
        app:layout_constraintStart_toStartOf="@id/carinf"
        app:layout_constraintEnd_toStartOf="@id/txt.car2"/>
    <TextView
        android:id="@+id/txt.car2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pet friendly"
        android:drawableStart="@drawable/pet_friend"
        android:drawablePadding="5sp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toTopOf="@id/carinf"
        app:layout_constraintStart_toEndOf="@id/txt.car1"
        app:layout_constraintEnd_toStartOf="@id/txt.car3"/>
    <TextView
        android:id="@+id/txt.car3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sound"
        android:drawableStart="@drawable/silent"
        android:drawablePadding="5sp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toTopOf="@id/carinf"
        app:layout_constraintStart_toEndOf="@id/txt.car2"
        app:layout_constraintEnd_toEndOf="@id/carinf"/>
    <TextView
        android:id="@+id/txt.carinf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toyota Yaris"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/carinf"
        app:layout_constraintBottom_toTopOf="@id/cancel"/>

    <TextView
        android:id="@+id/txt.carinf2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(9432 س ح ل)"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/txt.carinf"
        android:layout_marginTop="5dp"
        />
    <ImageView
        android:id="@+id/phone2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/phone1"
        app:layout_constraintTop_toBottomOf="@id/carinf"
        app:layout_constraintBottom_toTopOf="@id/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/message"
        app:layout_constraintTop_toBottomOf="@id/carinf"
        app:layout_constraintBottom_toTopOf="@id/cancel"
        app:layout_constraintEnd_toStartOf="@id/phone2"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>