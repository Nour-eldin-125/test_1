<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectangle"
    android:padding="10dp">


    <TextView
        android:id="@+id/Signup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full name"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Signup1"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/txt.name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/person"
        android:drawablePadding="10sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:hint="enter your full name"
        android:textColorHint="#616161"
         />
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone number"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt.name"
        android:layout_marginTop="5dp"
        />

    <EditText
        android:id="@+id/txt.phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/phone"
        android:drawablePadding="10sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/phone"
        android:hint="enter your phone number"
        android:textColorHint="#616161"
        />
    <TextView
        android:id="@+id/email1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt.phone"
        android:layout_marginTop="5dp"
        />

    <EditText
        android:id="@+id/txt.email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/email"
        android:drawablePadding="10sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/email1"
        android:hint="enter your email address"
        android:textColorHint="#616161"
        />
    <TextView
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/txt.email"
        android:layout_marginTop="5dp"
        />

    <EditText
        android:id="@+id/txt.pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/password"
        android:drawablePadding="10sp"
        android:inputType="textPassword"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/pass"
        android:hint="enter your pasword"
        android:textColorHint="#616161" />
    <TextView
        android:id="@+id/pass_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/txt.pass"
        android:layout_marginTop="5dp"
        />

    <EditText
        android:id="@+id/txt.pass_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/password"
        android:drawablePadding="10sp"
        android:inputType="textPassword"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/pass_con"
        android:hint="enter your pasword"
        android:textColorHint="#616161" />


    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rect"
        android:textColor="#ffffff"
        android:text="Register"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/txt.pass_con"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="have an account Sign in"
        android:onClick="click"
        android:textColor="#ffffff"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="7dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>